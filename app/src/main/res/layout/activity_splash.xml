<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:context=".ui.SplashActivity">

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="@dimen/splash_icon"
        android:layout_height="@dimen/splash_icon"
        android:layout_gravity="center"
        android:layout_marginStart="412dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="412dp"
        android:layout_marginBottom="234dp"
        android:src="@drawable/app_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/splash_text_width"
        android:layout_height="@dimen/splash_text_height"
        android:layout_gravity="center"
        android:layout_marginStart="325dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="154dp"
        android:gravity="center|top"
        android:text="@string/splash_text"
        android:textColor="@color/splash_text_color"
        android:textSize="@dimen/splash_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSplash" />

    <TextView
        android:id="@+id/version_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="860dp"
        tools:layout_editor_absoluteY="492dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
